{
  "name": "capture-starter-library",
  "version": "0.1.0",
  "description":
    "Boilerplate project with Rollup, Jest, CircleCI, Prettier, and Standard",
  "license": "MIT",
  "author": {
    "name": "Jack Steam",
    "email": "jacksteamdev@gmail.com"
  },
  "main": "dist/boilerplate.cjs.js",
  "module": "dist/boilerplate.esm.js",
  "browser": "dist/boilerplate.umd.js",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.10.2",
    "rollup": "^0.58.1",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "jest",
    "test-ci":
      "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test-watch": "jest --watch",
    "precommit": "lint-staged",
    "pretest": "eslint src/** test/**"
  },
  "files": ["dist"],
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix src/**",
      "git add"
    ],
    "*.{json,css,md}": ["prettier --write", "git add"]
  },
  "prettier": {
    "printWidth": 65,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
